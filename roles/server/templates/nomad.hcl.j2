data_dir  = "{{ data_dir }}"
bind_addr = "{{ bind_addr }}"
log_level = "{{ log_level }}"

server {
    enabled  = {{ server_enable }}
    bootstrap_expect = {{ bootstrap_expect }}
    server_join {
        retry_join = [
        {% for item in groups['all'] %}
            "{{ hostvars[item]['inventory_hostname'] }}:{{ bind_port }}",
        {% endfor %}
        ]
        retry_max      = {{ retry_max }}
        retry_interval = "{{ retry_interval }}"
    }
}

tls {
    http      = {{ tls_http }}
    rpc       = {{ tls_rpc }}
    ca_file   = "{{ ca_file }}"
    cert_file = "{{ cert_file }}"
    key_file  = "{{ key_file }}"

    verify_server_hostname = {{ verify_server_hostname }}
    verify_https_client    = {{ verify_https_client }}

}

client {
    enabled = {{ client_enable }}
}